---

import Layout from '../layouts/Layout.astro';

import Header from '../components/Header.astro';

const products = [
    { name: "Radiant Skin Serum", image: "/product1.jpg", description: "Achieve a glowing complexion with our advanced formula." },
    { name: "Volumizing Mascara", image: "/product2.jpg", description: "Dramatic lashes that last all day." },
    { name: "Hydrating Lip Tint", image: "/product3.jpg", description: "Nourishing color for soft, supple lips." },
    // Add more products as needed
  ];

---

<Layout title="Glamour Fashion | Properties">

    <Header />

    <main class="py-4 min-[562px]:py-8 flex flex-col gap-16 min-[562px]:gap-20 justify-center items-center [&>*]:px-4 [&>*]:lg:px-0 [&>section]:w-full [&>section]:max-w-4xl [&>section]:m-auto [&>section]:gap-8">
      <section class="flex flex-col gap-8 justify-center items-start">
        <h1 class="text-4xl font-bold">Our Products</h1>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {products.map((product, index) => (
            <div class="flex flex-col gap-4">
              <img src={product.image} alt={product.name} class="w-full h-64 object-cover rounded-lg" />
              <h2 class="text-xl font-semibold">{product.name}</h2>
              <p>{product.description}</p>
              <button class="px-4 py-2 bg-[#e22f98] text-white rounded-lg hover:bg-[#a33776] transition-colors">
                Learn More
              </button>
            </div>
          ))}
        </div>
      </section>
    </main>



    <main class="py-4 min-[562px]:py-8 flex flex-col gap-16 min-[562px]:gap-20 justify-center items-center">
        <section class="w-full max-w-4xl m-auto px-4 lg:px-0">
          <h1 class="text-4xl font-bold mb-8">Our Beauty Properties</h1>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {[1, 2, 3, 4, 5, 6].map((item) => (
              <div class="bg-white rounded-lg shadow-md overflow-hidden">
                <img src={`/property-${item}.jpg`} alt={`Beauty Property ${item}`} class="w-full h-48 object-cover" />
                <div class="p-4">
                  <h2 class="text-xl font-semibold mb-2">Beauty Line {item}</h2>
                  <p class="text-gray-600 mb-4">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
                  <a href="#" class="text-[#e22f98] font-medium hover:underline">Learn more</a>
                </div>
              </div>
            ))}
          </div>
        </section>
      </main>

  </Layout>
