                    <svg  xmlns="http://www.w3.org/2000/svg"  width="24"  height="24"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-shopping-cart"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M6 19m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0" /><path d="M17 19m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0" /><path d="M17 17h-11v-14h-2" /><path d="M6 5l14 1l-1 7h-13" /></svg>
                </a>
            </nav>
        </div>
    </nav>
</header>

<script>
    const menuMobileBtn = document.getElementById('menuMobileBtn')
    const menu = document.querySelector('#menuMobile')

    menuMobileBtn?.addEventListener('click', () => {
        menu?.classList.toggle('hidden')
    })  

    const desktopHearth = document.getElementById('desktopHearth')
    const mobileHearth = document.getElementById('mobileHearth')

    desktopHearth?.addEventListener('click', () => {
        const desktopHearthSVG = document.getElementById("desktopHearthSVG")
        if(desktopHearthSVG){
            desktopHearthSVG?.classList.toggle("fill-black")
            desktopHearthSVG?.classList.toggle("!stroke-black")
        }
    })

</script>