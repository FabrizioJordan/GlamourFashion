    <nav class="relative flex md:hidden flex-col gap-6 justify-center items-center font-medium">

        <button id="menuMobileBtn">
            <p>Menu</p>
        </button>
        
        <div id="menuMobile" class="absolute z-20 top-16 right-0 hidden flex flex-col bg-white rounded-lg border border-gray-300 hover:[&>A]:bg-[#dddddd] [&>A]:px-6 [&>A]:py-4">
            <a class="rounded-t-lg" href="">
                About
            </a>
            <a href="">
                Properties
            </a>
            <a href="">
                Blog
            </a>
            <a href="">
                QA
            </a>
            <nav class="w-full flex flex-col justify-center items-center 
            [&>*]:px-6 [&>*]:py-4 [&>*]:w-full [&>*]:bg-[#e6e6e6] [&>*]:flex [&>*]:justify-center [&>*]:items-center [&>*]:border-t [&>*]:border-[#cacaca] hover:[&>*]:bg-[#d1d1d1]
            [&_svg]:size-5 [&_svg]:stroke-[#8a8a8a] [&_svg]:transition-colors [&_svg]:duration-300 ">
                <a class="text-sm text-[#969696] transition-colors duration-300 hover:text-black" href="#" target="_blank" rel="noopener noreferrer">
                    Search
                </a>
                <button id="mobileHearth" class="[&>svg]:hover:stroke-black">
                    <svg id="mobileHearthSVG" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"  stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M19.5 12.572l-7.5 7.428l-7.5 -7.428a5 5 0 1 1 7.5 -6.566a5 5 0 1 1 7.5 6.572" /></svg>
